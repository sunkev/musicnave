<div class="user-conversation-scroll">
  <% if current_user.all_conversations %>
  <div class=side-bar-container>
    <h4>Conversations</h4>
    <div class=seperater></div>
    <% current_user.all_conversations.each do |user_id| %>
    <% conversation_user = User.find(user_id) %>
    <div class=side-bar-inner id="<%=user_id%>">
      <% if conversation_user.photo? %>
        <%= image_tag conversation_user.photo.url %>
      <% else %>
        <%= image_tag "blank-profile-hi-small.png" %>
      <% end %>
      <%= conversation_user.full_name %>
    </div>
    <% end %>
  <% end %>
  </div>
</div>

<div class="user-message-scroll">
  <div id=message-container>
  </div>
</div>

<div class="container">
    <%= simple_form_for(@message) do |f| %>
    <div class="header">
      <h3>Send Message</h3>
    </div>
    <div class="sep"></div>
    <div class="inputs">
      <div class="mycontainer-messages">
      <%= f.association :recipient, label: false,  label_method: :name_and_username, input_html: { class: 'chosen-messages'} %>
      </div>
      <%= f.input :body, required: true, label: false, placeholder: 'Body', inline_label: "Body", as: :text, input_html: { class: 'resizedTextbox'} %>
      <%= f.button :submit, "Send message" %>
    </div>
    <% end %>
</div>


<div class="message-button-container">
  <%= link_to 'New message', new_private_message_path, class: 'message-button' %>
</div>