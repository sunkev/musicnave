<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="small-3 columns"><h2>Sign up</h2></div>
  </div>

  <div class="row">
    <div class="large-5 columns"></div>
    <div class="large-5 columns">
      <div class="form-inputs">
        <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
        <%= f.input :last_name, label: 'Last Name',  required: true, autofocus: true %>
        <%= f.input :username,  required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, label: 'Password Confirmation',  required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign Up" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
