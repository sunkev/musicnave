  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

<!-- ################################################# -->
<!-- ##############      TOP BAR     ################# -->
<!-- ################################################# -->


<!-- ################################################# -->
<!-- ##############   USER SIGN UP   ################# -->
<!-- ################################################# -->

<!--  <div class="contain-to-grid"> -->
<div class="custom_nav">
  <nav class="top-bar">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1><a href="http://localhost:3000/home/index">musicnavi</h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Left Nav Section -->
      <ul class="left">
      </ul>

      <!-- Right Nav Section -->
      <ul class="right">
        <li class="has-form">
          <% if user_signed_in? %>
            Logged in as <strong><%= current_user.username %></strong>.
          </li>
            <li class="divider"></li>
            <li class="special"> <%= link_to 'Find a Lesson!', lessons_path %> </li>
            <li class="divider"></li>
            <li> <%= link_to 'My Lessons', profile_lessons_path %> </li>
            <li class="divider"></li>
            <li class="has-dropdown"><a href="#">Messages</a>
              <ul class="dropdown">
                <li><%= link_to 'Private messages', private_messages_path %> </li>
              </ul>
            </li>
            <li class="divider"></li>
            <li class="has-dropdown"><a href="#">Settings</a>
              <ul class="dropdown">
                <li> <%= link_to 'My Profile', user_path(current_user) %> </li>
                <li> <%= link_to 'Edit Profile', edit_user_registration_path %> </li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %> </li>
              </ul>
            </li>
          <% else %>
            <li class="divider"></li>
            <li><%= link_to "Sign up", new_user_registration_path %> </li>
            <li class="divider"></li>
            <li><%= link_to "Login", new_user_session_path %> </li>
          <% end %>
        <!-- /li> -->
      </ul>
    </section>
  </nav>
</div>
<!-- </div> -->

<!-- ################################################# -->
<!-- ##################   Errors  #################### -->
<!-- ################################################# -->

<% flash.each do |key, value| %>
  <%= content_tag(:div, value, :class => "flash #{key}") %>
<% end %>
<div class="custom_nav">
  <div class=body-styles>
    <%= yield %>
  </div>
</div>

    <%= javascript_include_tag "application" %>
  </body>
</html>