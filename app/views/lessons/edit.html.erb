<h1>Editing lesson</h1>

<%= "Editing #{@lesson.title}" %>

<%= simple_form_for @lesson do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.submit 'Confirm edit' %>
<% end %>

<div> Upload a Photo </div>
<%= form_for @lesson do |form| %>
  <%= form.file_field :lesson_photo, required: true %>
  <%= form.submit %>
<% end %>

<%= link_to 'Back', lesson_path %>
