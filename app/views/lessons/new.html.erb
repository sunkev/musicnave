<%= simple_form_for @lesson do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :private %>
  <%= f.association :students, label_method: :name_and_username %>

  <%= image_tag @lesson.photo.url %>
    <%= content_tag :h2, 'Upload a Photo' %>

    <%= form_for @lesson do |form| %>
      <%= form.file_field :photo, required: true %>
      <%= form.submit %>
    <% end %>

  <%= f.button :submit %>
<% end %>

<%= link_to "Cancel", profile_lessons_path, class: 'button' %>
